    "enableRateLimit": true,
    "maxConcurrentConnections": 100,
    "sessionTimeout": 3600000,
    "enableSSL": false,
    "forceHTTPS": false
  },
  
  "performance": {
    "memoryLimit": 2048,
    "cpuLimit": 2,
    "gcInterval": 300000,
    "cacheSize": 128,
    "connectionPoolSize": 10,
    "requestTimeout": 30000
